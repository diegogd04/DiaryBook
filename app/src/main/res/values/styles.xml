<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Common -->
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_tertiary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!-- Activity Item -->
    <style name="activity_item_color">
        <item name="android:layout_width">@dimen/activity_item_color_width</item>
    </style>

    <style name="activity_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
        <item name="android:background">@color/md_theme_secondaryContainer</item>
    </style>

    <style name="activity_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_padding</item>
    </style>

    <style name="activity_item_cardview">
        <item name="android:layout_marginVertical">@dimen/small_margin_padding</item>
        <item name="strokeWidth">@dimen/general_stroke_width</item>
    </style>

    <!-- Activity List -->
    <style name="activity_list_recyclerview">
        <item name="android:layout_margin">@dimen/medium_margin_padding</item>
    </style>

    <style name="activity_list_button_add">
        <item name="android:layout_width">@dimen/activity_list_button_add_size</item>
        <item name="android:layout_height">@dimen/activity_list_button_add_size</item>
        <item name="android:layout_margin">@dimen/medium_margin_padding</item>
        <item name="cardBackgroundColor">@color/md_theme_primary</item>
        <item name="cardCornerRadius">@dimen/general_button_corner_radius</item>
        <item name="cardElevation">@dimen/general_button_elevation</item>
    </style>

    <style name="activity_list_button_add_icon">
        <item name="android:layout_width">@dimen/login_cardview_image_size</item>
        <item name="android:layout_height">@dimen/login_cardview_image_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Create Activity -->
    <style name="create_activity_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/floating_height</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/giant_margin_padding</item>
        <item name="android:paddingTop">@dimen/big_margin_padding</item>
    </style>

    <style name="create_activity_button_toggle_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/big_margin_padding</item>
        <item name="selectionRequired">true</item>
        <item name="singleSelection">true</item>
    </style>

    <style name="create_activity_button_toggle_group_button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="create_activity_create_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/giant_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/big_margin_padding</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
    </style>

    <!-- Create Form -->
    <style name="create_form_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="create_form_text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="create_form_text_input_edit_text_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="create_form_text_input_edit_text_duration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">time</item>
    </style>

    <style name="create_form_text_input_edit_text_date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">date</item>
    </style>

    <style name="create_form_text_input_edit_text_hour">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">datetime</item>
    </style>

    <!-- Activity Detail -->
    <style name="activity_detail_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="activity_detail_top_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/tiny_margin_padding</item>
    </style>

    <style name="activity_detail_top_info_element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/tiny_margin_padding</item>
        <item name="cardBackgroundColor">@color/md_theme_primaryContainer</item>
    </style>

    <style name="activity_detail_top_info_element_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
    </style>

    <style name="activity_detail_description_container" parent="activity_detail_top_info_element_container">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="activity_detail_top_info_element_icon">
        <item name="android:layout_width">@dimen/general_icon_size</item>
        <item name="android:layout_height">@dimen/general_icon_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin_padding</item>
        <item name="android:tint">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="activity_detail_top_info_element_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="activity_detail_description_hint_text" parent="activity_detail_top_info_element_text">
        <item name="android:layout_marginStart">@dimen/small_margin_padding</item>
    </style>

    <style name="activity_detail_info_element">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/giant_margin_padding</item>
        <item name="cardBackgroundColor">@color/md_theme_primaryContainer</item>
    </style>

    <style name="activity_detail_info_element_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="activity_detail_info_element_title_text" parent="activity_detail_info_element_text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_padding</item>
    </style>

    <!-- Bottom App Bar -->
    <style name="bottom_app_bar_today_button">
        <item name="android:layout_width">@dimen/bottom_app_bar_today_button_size</item>
        <item name="android:layout_height">@dimen/bottom_app_bar_today_button_size</item>
        <item name="android:layout_marginBottom">@dimen/bottom_app_bar_today_button_margin</item>
        <item name="cardCornerRadius">@dimen/bottom_app_bar_today_button_corner_radius</item>
    </style>

    <style name="bottom_app_bar_today_button_image">
        <item name="android:layout_width">@dimen/bottom_app_bar_today_button_size</item>
        <item name="android:layout_height">@dimen/bottom_app_bar_today_button_size</item>
    </style>

    <style name="bottom_app_bar">
        <item name="android:background">@color/md_theme_primary</item>
        <item name="itemIconTint">@color/md_theme_onPrimary</item>
        <item name="itemIconSize">@dimen/general_icon_size</item>
        <item name="itemRippleColor">@color/md_theme_tertiary</item>
        <item name="itemActiveIndicatorStyle">@style/bottom_app_bar_indicator</item>
    </style>

    <style name="bottom_app_bar_indicator">
        <item name="android:width">@dimen/bottom_app_bar_indicator_width</item>
        <item name="android:height">@dimen/bottom_app_bar_indicator_height</item>
        <item name="marginHorizontal">@dimen/small_margin_padding</item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:color">@color/md_theme_secondaryFixedDim_highContrast</item>
    </style>

    <!-- Toolbar -->
    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/md_theme_primary</item>
        <item name="titleTextColor">@color/md_theme_onPrimary</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="toolbar_button">
        <item name="android:layout_width">@dimen/general_icon_size</item>
        <item name="android:layout_height">@dimen/general_icon_size</item>
        <item name="android:layout_marginEnd">@dimen/medium_margin_padding</item>
        <item name="android:tint">@color/md_theme_onTertiary</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Login Fragment y User Fragment -->
    <style name="login_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/md_theme_primaryContainer</item>
    </style>

    <style name="avatar_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Login Fragment -->
    <style name="login_title" parent="title">
        <item name="android:layout_marginTop">@dimen/login_title_margin_top</item>
    </style>

    <style name="login_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/login_cardview_container_padding</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="login_cardview_image">
        <item name="android:layout_width">@dimen/login_cardview_image_size</item>
        <item name="android:layout_height">@dimen/login_cardview_image_size</item>
    </style>

    <style name="login_cardview_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/medium_margin_padding</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="login_input" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_padding</item>
        <item name="android:textColorHint">@color/md_theme_onTertiaryContainer</item>
        <item name="boxBackgroundColor">@color/md_theme_tertiaryContainer</item>
        <item name="boxStrokeColor">@color/md_theme_onTertiaryContainer</item>
        <item name="boxStrokeWidth">@dimen/general_stroke_width</item>
    </style>

    <style name="login_input_password" parent="login_input">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/md_theme_tertiary</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_padding</item>
    </style>

    <style name="login_input_password_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="login_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_padding</item>
        <item name="dividerInsetStart">@dimen/login_divider_size</item>
        <item name="dividerInsetEnd">@dimen/login_divider_size</item>
        <item name="dividerColor">@color/md_theme_tertiary</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/md_theme_tertiaryContainer</item>
        <item name="cardCornerRadius">@dimen/general_button_corner_radius</item>
        <item name="cardElevation">@dimen/general_button_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/md_theme_onTertiaryContainer</item>
        <item name="strokeWidth">@dimen/general_stroke_width</item>
        <item name="rippleColor">@color/md_theme_tertiary</item>
    </style>

    <style name="login_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/login_button_text_padding</item>
        <item name="android:textColor">@color/md_theme_onTertiaryContainer</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <!-- Create Fragment -->
    <style name="create_avatar" parent="user_avatar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_padding</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="create_title" parent="title">
        <item name="android:layout_marginTop">@dimen/create_title_margin_top</item>
    </style>

    <!-- User Fragment -->
    <style name="user_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
    </style>

    <style name="user_avatar">
        <item name="android:layout_width">@dimen/user_avatar_size</item>
        <item name="android:layout_height">@dimen/user_avatar_size</item>
        <item name="cardCornerRadius">@dimen/user_avatar_card_corner_radius</item>
    </style>

    <style name="user_head_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/medium_margin_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="user_head_text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="user_head_text_email">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="user_cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_padding</item>
    </style>

    <style name="user_component_cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/md_theme_primaryContainer</item>
        <item name="strokeColor">@color/md_theme_primary</item>
    </style>

    <!-- User Activities Section Item -->
    <style name="user_activities_section_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="user_activities_section_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_activities_section_item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerColor">@color/md_theme_primary</item>
    </style>

    <style name="user_activities_section_item_text">
        <item name="android:layout_width">@dimen/user_activities_section_item_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
        <item name="android:paddingStart">@dimen/big_margin_padding</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="user_activities_section_item_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/medium_margin_padding</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_activities_section_item_image">
        <item name="android:layout_width">@dimen/user_activities_section_item_image_size</item>
        <item name="android:layout_height">@dimen/user_activities_section_item_image_size</item>
    </style>

    <style name="user_activities_section_item_divider_small" parent="user_activities_section_item_divider">
        <item name="dividerInsetStart">@dimen/user_divider_small_size</item>
        <item name="dividerInsetEnd">@dimen/user_divider_small_size</item>
    </style>

    <!-- User Action Item -->
    <style name="user_action_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <!-- User Delete Dialog -->
    <style name="user_delete_dialog_icon">
        <item name="android:layout_width">@dimen/user_delete_dialog_icon_size</item>
        <item name="android:layout_height">@dimen/user_delete_dialog_icon_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_padding</item>
        <item name="android:tint">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="user_delete_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium_margin_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/user_delete_dialog_description_text_size</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
    </style>

    <style name="user_delete_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_margin_padding</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_padding</item>
    </style>

    <style name="user_delete_input_email" parent="user_delete_input">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="user_delete_input_password" parent="user_delete_input">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="user_delete_container_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="user_delete_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin_padding</item>
    </style>

    <style name="user_delete_button_cancel" parent="user_delete_button">
        <item name="android:backgroundTint">@color/md_theme_onPrimary</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="strokeColor">@color/md_theme_primary</item>
        <item name="strokeWidth">@dimen/user_delete_dialog_button_cancel_stroke_width</item>
    </style>

</resources>